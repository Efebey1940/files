{
  "name": "Ubuntu 22.04 with RDP, systemd, and hostnamectl",
  "image": "ubuntu:22.04",
  "runArgs": [
    "--cap-add=ALL",
    "--security-opt", "seccomp=unconfined",
    "--tmpfs", "/tmp:exec",
    "--tmpfs", "/run",
    "--tmpfs", "/run/lock",
    "--volume", "/sys/fs/cgroup:/sys/fs/cgroup:ro",
    "--volume", "/dev:/dev"
  ],
  "mounts": [
    "source=/sys/fs/cgroup,target=/sys/fs/cgroup,type=bind,consistency=cached"
  ],
  "postStartCommand": "apt update && apt install systemctl docker.io wget curl git -y",
  "forwardPorts": [22],
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers"
      ]
    }
  }
}
